{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "target": "es5",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noImplicitReturns": false,
    "lib": [
      "ES2015"
    ],
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  // "typeRoots" : ["./node_modules/@types", "./types"],
}